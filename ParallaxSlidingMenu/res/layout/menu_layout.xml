<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dc353b"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/person_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/menu_default_photo2" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/person_photo"
        android:text="gaolei2@kingsoft.com"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/person_photo"
        android:text="100000000"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/person_photo"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/menu_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:src="@drawable/menu_message_icon" />

            <TextView
                android:id="@+id/message"
                style="@style/menu_text_style"

                android:text="@string/message" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_knowledge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_message_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_knowledge_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:src="@drawable/menu_knowledge_icon" />

            <TextView
                android:id="@+id/knowledge_library"
                style="@style/menu_text_style"
                android:text="@string/knowledge_library" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_cs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_knowledge_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_cs_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:src="@drawable/menu_cs_icon" />

            <TextView
                android:id="@+id/custom_service"
                style="@style/menu_text_style"
                android:text="@string/custom_service" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="20dp"
                android:src="@drawable/exit_login" />

            <TextView
                android:id="@+id/setting"
                style="@style/menu_text_style"
                android:text="@string/exit_login" />

        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/shadow" />
</RelativeLayout>